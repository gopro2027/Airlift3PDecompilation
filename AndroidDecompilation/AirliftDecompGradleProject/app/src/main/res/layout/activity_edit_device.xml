<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/serialLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_text"
            android:id="@+id/serialTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Serial:"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_text"
            android:id="@+id/serialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1234-R1232"
            android:textAlignment="textEnd"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/authorizedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/serialLayout">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_text"
            android:id="@+id/authorizedTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Authorized:"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/light_text"
            android:id="@+id/authorizedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="No"
            android:textAlignment="textEnd"/>
    </LinearLayout>
    <Button
        android:id="@+id/authorizedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Set Authorized"
        android:layout_below="@+id/authorizedLayout"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
